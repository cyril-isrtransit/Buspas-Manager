@{
    ViewBag.Title = Resources.LanguageResource.Config;
}

<!-- begin #content -->
<div id="content" class="content">
    <!-- begin breadcrumb -->
    <ol class="breadcrumb pull-right">
        <li class="active">@ViewBag.Title</li>
    </ol>
    <!-- end breadcrumb -->
    <!-- begin page-header -->
    <h1 class="page-header"></h1>
    <!-- end page-header -->
    <!-- begin section-container -->
    <div class="section-container section-with-top-border">
        <!-- begin panel -->
        <div class="panel pagination-inverse clearfix m-b-0 panel-inverse">
            <div class="panel-heading">
                <div class="btn-group">
                    <div class="btn-xs btn-default"><b>@ViewBag.Title</b></div>
                </div>
                <div style="float:right">
                    <span>
                        <span class="btn-group pull-left" id="buttonForSelection">
                            <button type="button" class="btn btn-white btn-xs dropdown-toggle" data-toggle="dropdown">
                                <span class="caret"></span> @Resources.LanguageResource.ForTheSelection
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#delete-multiple-dialog" data-toggle="modal"><i class="glyphicon glyphicon-trash"></i> @Resources.LanguageResource.Delete</a></li>
                            </ul>
                        </span>
                    </span>
                    <a href="#add-dialog" id="add_button" data-toggle="modal" class="btn btn-xs btn-default"><i class="fa fa-plus"></i> @Resources.LanguageResource.New</a>
                </div>
            </div>
            <table id="data-table1" data-order='[[0,"asc"]]' class="table table-bordered table-hover table-td-valign-middle table-striped">
                <thead>
                    <tr>
                        <th>@Resources.LanguageResource.Description</th>
                        <th data-sorting="disabled"></th>
                    </tr>
                </thead>
                <tbody>
                    foreach (var item in Model)
                    {
                        <tr class="odd gradeX" id="item.ID">
                            <td><div class='descriptionTd'>Html.DisplayFor(modelItem => item.Description)</div></td>
                            <td>
                                <div class='boutonTd'>
                                    <a href="#edit-dialog" onclick="mise_en_cache_var_categorie('Html.DisplayFor(modelItem => item.ID)','Html.DisplayFor(modelItem => item.Description)')" class="btn btn-sm btn-primary" data-toggle="modal"><i class="fa fa-pencil"></i></a>
                                    <a href="#delete-dialog" onclick="mise_en_cache_var_categorie('Html.DisplayFor(modelItem => item.ID)','Html.DisplayFor(modelItem => item.Description)')" class="btn btn-sm btn-danger" data-toggle="modal"><i class="glyphicon glyphicon-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- end panel -->
    </div>
    <!-- end section-container -->
    <!-- begin #footer -->
    <div id="footer" class="footer">
        <span class="pull-right">
            <a href="javascript:;" class="btn-scroll-to-top" data-click="scroll-top">
                <i class="fa fa-arrow-up"></i> <span class="hidden-xs">@Resources.LanguageResource.BackToTop</span>
            </a>
        </span>
        &copy; 2016 <b>ISR Transit</b> @Resources.LanguageResource.AllRightReserved
    </div>
    <!-- end #footer -->
</div>
<!-- end #content -->
<!-- #Edit-dialog -->
<div class="modal fade" id="edit-dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">@Resources.LanguageResource.EditCategories</h4>
            </div>
            <form method="post" action="javascript:EditCategory();" data-parsley-validate="true">
                <div class="modal-body">
                    <div class="form-group m-b-10">
                        <input type="hidden" name="ID" id="categorie_id">
                        <label class="col-md-3 control-label">@Resources.LanguageResource.Description : </label>
                        <input type="text" name="Description" id="categorie_description" class="form-control parsley-validated" placeholder="@Resources.LanguageResource.Description" data-parsley-required data-parsley-trigger="keyup" />
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="javascript:;" class="btn btn-sm width-100 btn-default" data-dismiss="modal">@Resources.LanguageResource.Close</a>
                    <button type="submit" class="btn btn-sm width-100 btn-success">@Resources.LanguageResource.Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- #Delete-dialog -->
<div class="modal fade" id="delete-dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">@Resources.LanguageResource.DeleteCategories</h4>
            </div>
            <form method="post" action="javascript:;">
                <div class="modal-body">
                    <input type="hidden" name="ID" id="categorie_del_id">
                    @Resources.LanguageResource.ConfirmDeleteCategories
                </div>
                <div class="modal-footer">
                    <a href="javascript:;" class="btn btn-sm width-100 btn-default" data-dismiss="modal">@Resources.LanguageResource.Close</a>
                    <button type="submit" id="deleteMono" class="btn btn-sm width-100 btn-danger" data-dismiss="modal">@Resources.LanguageResource.Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- #Delete-dialog -->
<div class="modal fade" id="delete-multiple-dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">@Resources.LanguageResource.DeleteCategories</h4>
            </div>
            <div class="modal-body">
                @Resources.LanguageResource.ConfirmDeleteCategories

            </div>
            <div class="modal-footer">
                <a href="javascript:;" class="btn btn-sm width-100 btn-default" data-dismiss="modal">@Resources.LanguageResource.Close</a>
                <a href="javascript:;" class="btn btn-sm width-100 btn-danger" id="deleteMulti" data-dismiss="modal">@Resources.LanguageResource.Delete</a>
            </div>
        </div>
    </div>
</div>

<!-- #Add-dialog -->
<div class="modal fade" id="add-dialog">
    <div class="modal-dialog modal-lg" id="add_modal">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">@Resources.LanguageResource.AddCategories</h4>
            </div>
            <form method="post" action="javascript:;" data-parsley-validate="true">
                <div class="modal-body">
                    <div class="form-group m-b-10">
                        <label class="col-md-3 control-label">@Resources.LanguageResource.Description : </label>
                        <input type="text" class="form-control parsley-validated" name="Description" id="Description" placeholder="@Resources.LanguageResource.Description" data-parsley-required data-parsley-trigger="keyup" />
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="javascript:;" class="btn btn-sm width-100 btn-default" data-dismiss="modal">@Resources.LanguageResource.Close</a>
                    <button id="addMono" type="submit" class="btn btn-sm width-100 btn-success">@Resources.LanguageResource.Add</button>
                </div>
            </form>
        </div>
    </div>
</div>